// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id
  name         String
  password     String
  currentToken String
  email        String    @unique
  age          Int?
  posts        Post[]    @relation("userOnPost")
  comments     Comment[] @relation("commentOnUser")
}

model Post {
  id        String    @id
  title     String
  body      String?
  published Boolean
  author    User      @relation("userOnPost", fields: [authorId], references: [id], onDelete: Cascade)
  authorId  String
  comments  Comment[] @relation("commentOnPost")
}

//* [id] in references of @relation is that of Post's id.

//* authorId is "foreign key", i.e it does not show up in database
//* it is the addition of "field of User" & Id i.e author + Id = authorId
//* It references the id key in the User model.

//* Foreign keys: are used to create relation between tables/models.

model Comment {
  id       String @id @map("comment_id")
  text     String
  post     Post   @relation("commentOnPost", fields: [postId], references: [id])
  postId   String
  author   User   @relation("commentOnUser", fields: [authorId], references: [id], onDelete: Cascade)
  authorId String
}

//* postId and authorId are foreign keys
